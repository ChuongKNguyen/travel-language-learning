<div id="fullscreen_bg" class="fullscreen_bg">
</div>
<div ng-app="myFormApp" ng-controller="mainController">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="panel panel-default">
          <div class="panel-body">
            <h2 class="text-center">Edit <%= resource_name.to_s.humanize %></h2>

            <%= simple_form_for(resource, html: {name: 'myForm'}, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <div class="col-md-6">
                  <div class="input-group validator">
                    <span class="input-group-addon"><%= icon('user') %></span>
                    <%= f.input :first_name, required: true, autofocus: true, placeholder: "First name", label: false, input_html: {'ng-model' => 'firstName'} %>
                    <span class="input-group-addon test" ng-show="!nameRegex.test(firstName)">Name must be only letters!</span>
                  </div>
                </div>


                <div class="col-md-6">
                  <div class="input-group validator">
                    <span class="input-group-addon"><%= icon('user') %></span>
                    <%= f.input :last_name, placeholder: "Last name", required: true, label: false, input_html: {'ng-model' => 'lastName'} %>
                    <span class="input-group-addon test" ng-show="!nameRegex.test(lastName)">Name must be only letters!</span>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group validator">
                    <span class="input-group-addon"><%= icon('envelope') %></span>
                    <%= f.input :email, placeholder: "E-mail", required: true, label: false, input_html: {'ng-model' => 'email'}  %>
                    <span class="input-group-addon test" ng-show="!emailRegex.test(email)">Email must be valid!</span>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-addon"><%= icon('home') %></span>
                    <%= f.input :native_language, required: true, placeholder: "Native language", label: false %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-addon"><%= icon('home') %></span>
                    <%= f.input :origin, input_html: { id: 'origin' }, required: true, placeholder: "Origin location...", label: false %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-addon"><%= icon('plane') %></span>
                    <%= f.input :destination, input_html: { id: 'destination' }, required: true, placeholder: "Destination location...", label: false %>
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="input-group">
                    <span class="input-group-addon"><%= icon('birthday-cake') %></span></span>
                  <%= f.input :birthday, as: :date, start_year: Date.today.year - 90, 
                    end_year: Date.today.year - 12, required: true,  label: false %>
                </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-addon"><%= icon('flask') %></span></span>
                  <%= f.input :gender, required: true, placeholder: "Gender", label: false %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-addon"><%= icon('key') %></span></span>
                  <%= f.input :current_password, label: false, placeholder: "We need your current password to confirm your changes", required: true %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-addon"><%= icon('key') %></span></span>
                  <%= f.input :password, required: true, label: false, placeholder: "Password (at least 6 characters)" %>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="input-group">
                    <span class="input-group-addon"><%= icon('key') %></span></span>
                  <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm password" %>
                  </div>
                </div>

                <div class="col-md-12">
                  <div class="form-actions">
                    <%= f.button :submit, "Submit", class: "btn btn-md btn-primary btn-block", data: { disable_with: "Submitting..." } %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>

<h3>Cancel my account</h3>

<p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
